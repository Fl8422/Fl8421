<ParserPanel>:
    orientation: "vertical"
    padding: dp(20)
    spacing: dp(10)

    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: "Parser Panel"
        font_size: dp(24)
        bold: True
        color: 0, 0, 1, 1
        size_hint_y: None
        height: self.texture_size[1]

    TextInput:
        id: query_input
        hint_text: "Введите запрос"
        size_hint_y: None
        height: dp(50)
        background_color: 0, 0, 1, 1
        foreground_color: 1, 1, 1, 1
        multiline: False

    Spinner:
        id: search_type
        text: "Тип поиска"
        values: ["Стандартный", "Подробный", "По времени", "По сайту"]
        size_hint_y: None
        height: dp(50)

    Button:
        text: "Поиск"
        size_hint_y: None
        height: dp(50)
        background_color: 0, 0, 1, 1
        on_release: root.search(root.ids.query_input.text, root.ids.search_type.text)
        on_press: self.background_color = [1, 0.5, 0, 1]
        on_release: self.background_color = [0, 0, 1, 1]

    Label:
        id: results
        text: "Результаты будут отображаться здесь"
        size_hint_y: None
        height: dp(400)
        text_size: self.width, None
        halign: "left"
        valign: "top"
